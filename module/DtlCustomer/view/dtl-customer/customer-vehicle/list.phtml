                    <td><?php echo $this->escapeHtml($customerVehicle->getPlate()); ?></td>
                    <td><?php echo $this->escapeHtml($customerVehicle->getColor()); ?></td>
                    <td><?php echo $this->currency($customerVehicle->getValue()); ?></td>
                    <td>
                        <div class="btn-group btn-group-xs pull-right">
                            <a class="btn btn-default btn-xs" href="javascript: customerVehicleDelete('<?php echo $customerVehicle->getId(); ?>', '<?php echo $this->customerId; ?>')"><i class="glyphicon glyphicon-remove"></i></a>
                        </div>
                    </td>
                </tr>
            <?php endforeach; ?>
        <?php endif; ?>
    </table>
</div>